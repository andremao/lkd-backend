{
  "name": "lkd-backend",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.js",
  "description": "itcast.cn li ke de backend",
  "repository": {
    "type": "git",
    "url": "git@gitee.com:andremao/lkd-backend.git"
  },
  "author": {
    "name": "andremao"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "electron": "^18.3.7",
    "electron-builder": "^22.4.1",
    "wait-on": "^4.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "elec": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && npm run elec\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./",
  "build": {
    "appId": "cn.itcast.lkd",
    "productName": "立可得智能货柜·后台管理系统",
    "copyright": "Copyright © 2020 ${author}",
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "src/main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-v${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/dmgbg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.icns",
      "artifactName": "${productName}-Web-Setup-v${version}.${ext}",
      "publisherName": "andremao"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  }
}
